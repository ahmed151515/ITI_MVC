@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr>
<form method="post" action="@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <label> Name</label>
        <input type="text" name="Name" class="form-control" value="@Model?.Name" />
    </div>
    <div>
        <label> Salary</label>
        <input type="number" name="Salary" class="form-control" value="@Model?.Salary" />
    </div>
    <div>
        <label> Address</label>
        <input type="text" name="Address" class="form-control" value="@Model?.Address" />
    </div>
    <div>
        <label> Department</label>
        <select name="Dept_Id">
            <option value="@Model.Dept_Id" > @Model.Department.Name</option>
            @foreach (var dept in ViewBag.Depts)
            {
                <option value="@dept.Id"> @dept.Name</option>

            }
        </select>
    </div>
    

    <input type="submit" />
</form>

